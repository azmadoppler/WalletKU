<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Show_goal">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal Status"
        android:textSize="16pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/current_goal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Goal"
        android:textSize="10pt"
        android:layout_margin="10dp"
        android:layout_below="@+id/header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/current_goal_value"
        android:layout_below="@id/header"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="0"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/deadline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline"
        android:textSize="10pt"
        android:layout_below="@id/current_goal_text"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/deadline_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_margin="10dp"
        android:textSize="10pt"
        android:layout_alignParentRight="true"
        android:layout_below="@id/current_goal_value"
        />

    <TextView
        android:id="@+id/amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="10pt"
        android:text="Amount Left"
        android:layout_below="@+id/deadline_text" />
    <TextView
        android:id="@+id/amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_margin="10dp"
        android:textSize="10pt"
        android:layout_alignParentRight="true"
        android:layout_below="@id/deadline_value" />
    <Button
        android:id="@+id/create_goal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Set You Goal"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/back_button" />

    <TextView
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/goal_desc"
        android:layout_below="@+id/goal_text"
        android:layout_toLeftOf="@+id/current_goal_value"
        android:layout_alignLeft="@+id/goal_text"
        android:layout_alignStart="@+id/goal_text"
        android:layout_above="@+id/create_goal_button" />

    <TextView
        android:textSize="10pt"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/goal_text"
        android:layout_below="@+id/amount_text"
        android:layout_alignLeft="@+id/amount_text"
        android:layout_alignStart="@+id/amount_text"
        android:layout_alignRight="@+id/amount_value"
        android:layout_alignEnd="@+id/amount_value" />


</RelativeLayout>

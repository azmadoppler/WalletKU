<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.walletku.Menu">

    <Button
        android:layout_margin="20dp"
        android:height="150dp"
        android:width="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Log"
        android:id="@+id/view_log_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:height="150dp"
        android:width="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Entry"
        android:id="@+id/new_entry_button"
        android:layout_alignTop="@+id/view_log_button"
        android:layout_toRightOf="@+id/view_log_button"
        android:layout_toEndOf="@+id/view_log_button" />

    <Button
        android:height="150dp"
        android:width="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Goal"
        android:id="@+id/set_goal_button"
        android:layout_below="@+id/view_log_button"
        android:layout_alignLeft="@+id/view_log_button"
        android:layout_alignStart="@+id/view_log_button" />

    <Button
        android:height="150dp"
        android:width="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/to_delete"
        android:layout_alignTop="@+id/set_goal_button"
        android:layout_toRightOf="@+id/view_log_button"
        android:layout_toEndOf="@+id/view_log_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.walletku.Home">

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/instant_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instant Mode"
        android:gravity="center"
        android:textSize="20pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_margin="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outcome"
        android:id="@+id/outcome_button"
        android:layout_below="@+id/value_edit_text"
        android:layout_alignRight="@+id/value_edit_text"
        android:layout_alignEnd="@+id/value_edit_text" />

    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value_edit_text"
        android:hint="Insert value here"
        android:textSize="10pt"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/instant_text" />

    <Button
        android:layout_margin="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/value_edit_text"
        android:id="@+id/income_button"
        android:text="Income"
        />
    <TextView
        android:layout_margin="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Money Left : "
        android:textSize="10pt"
        android:layout_below="@+id/income_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/total_money_text_field" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10pt"
        android:id="@+id/show_money_field"
        android:layout_alignTop="@+id/total_money_text_field"
        android:layout_alignRight="@+id/value_edit_text"
        android:layout_alignEnd="@+id/value_edit_text" />

    <TextView
        android:layout_margin="5pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Goal is : "
        android:textSize="10pt"

        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/total_money_text_field" />

    <TextView
        android:id="@+id/show_goal_money_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="10pt"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/value_edit_text"
        android:layout_alignEnd="@+id/value_edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money needed : "
        android:textSize="10pt"
        android:layout_margin="5pt"

        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:text="0"
        android:id="@+id/show_to_goal"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/value_edit_text"
        android:layout_alignEnd="@+id/value_edit_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_main_button"
        android:text="To Main Page"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
